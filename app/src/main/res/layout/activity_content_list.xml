<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devsaki.fakkudroid.ContentListActivity">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/normal_state"
        android:id="@+id/ll"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btnPrevius"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:src="@drawable/ic_action_previous_item"
            android:background="@drawable/image_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="3dp"/>
        <Button
            android:id="@+id/btnPage"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:text="1"/>
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:src="@drawable/ic_action_next_item"
            android:background="@drawable/image_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="3dp"/>
        <ImageButton
            android:id="@+id/btnDownloadManager"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:src="@drawable/ic_action_storage"
            android:background="@drawable/image_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="3dp"/>

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:src="@drawable/ic_action_refresh"
            android:background="@drawable/image_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="3dp"/>

        <ImageButton
            android:id="@+id/btnBrowser"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:src="@drawable/ic_action_web_site"
            android:background="@drawable/image_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="3dp"/>


    </LinearLayout>
</RelativeLayout>
